<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:gravity="center"
    android:background="@color/BlueGrey50">

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="search restaurant"
        android:text="Ethiopian"
        android:id="@+id/searchview_search_restaurant"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="search location"
        android:text="Toronto"
        android:layout_below="@id/searchview_search_restaurant"
        android:id="@+id/searchview_search_location"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="categorize"
        android:id="@+id/search_categorize_checkbox"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:id="@+id/searchview_search_btn"
        />



</LinearLayout>